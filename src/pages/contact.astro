---
import Layout from '../templates/Layout.astro';
---
<Layout title="Contact" description="Enquiries & bookings">
  <main class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-3xl font-semibold">Contact</h1>
    <form class="mt-6 border rounded-xl p-6" name="enquiry" method="POST" data-netlify="true">
      <input type="hidden" name="form-name" value="enquiry" />
      <label class="block mt-2">Name <input class="mt-1 border rounded p-2 w-full" name="name" required></label>
      <label class="block mt-4">Email <input class="mt-1 border rounded p-2 w-full" type="email" name="email" required></label>
      <label class="block mt-4">Message <textarea class="mt-1 border rounded p-2 w-full" name="message" rows="5" required></textarea></label>
      <button class="mt-6 border rounded px-5 py-2" type="submit">Send</button>
    </form>
  </main>
</Layout>
