---
import Layout from '../../templates/Layout.astro';
const event = {
  name: "Wild Dolphin Family Holiday",
  startDate: "2025-12-10",
  endDate: "2025-12-15",
  price: "Custom"
};
const schema = {
  "@context":"https://schema.org",
  "@type":"Event",
  "name": event.name,
  "startDate": event.startDate,
  "endDate": event.endDate,
  "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
  "eventStatus": "https://schema.org/EventScheduled",
  "location": {"@type":"Place","name":"Ponta Malongane","address":"Ponta Malongane, Mozambique"},
  "offers": {"@type":"Offer","price": "14900","priceCurrency":"ZAR","availability":"https://schema.org/InStock"},
  "organizer": {"@type":"Organization","name":"Halo Gaia"}
};
const base = import.meta.env.BASE_URL;
---
<Layout title={`${event.name} — Mozambique`} description="Ocean retreat with respectful dolphin encounters in Ponta Malongane." schema={schema}>
  <main class="container section">
    <h1 class="h1">{event.name}</h1>
    <p class="text-gray-700 mt-2">Dates: <b>{event.startDate}</b> to <b>{event.endDate}</b> • From <b>{event.price}</b></p>
    <div class="mt-6 grid gap-8 md:grid-cols-3">
      <div class="md:col-span-2">
        <h2 class="h3">What’s included</h2>
        <ul class="mt-2 list-disc pl-5 space-y-1">
<li>Family-friendly ocean time suitable for gentle swimmers</li>
<li>Local culture visit and beach braai</li>
<li>Flexible accommodation to suit your crew</li>
<li>Conservation briefing for kids</li>
        </ul>
        <h2 class="h3 mt-8">Daily rhythm</h2>
        <p class="mt-2">Morning ocean time, midday rest, afternoon circle, and an evening wind-down.</p>
        <h2 class="h3 mt-8">Safety & ethics</h2>
        <p class="mt-2">We follow the Ponta do Ouro Partial Marine Reserve one-boat policy and no-touch ethic.</p>
      </div>
      <aside class="card p-6 h-fit">
        <h3 class="h3">Book your spot</h3>
        <p class="mt-2">Send an enquiry and we’ll confirm availability.</p>
        <a class="btn mt-4 w-full text-center" href={base + 'contact'}>Enquire</a>
        <a class="btn--alt mt-3 w-full text-center" href={base + 'events/events.ics'}>Add to Calendar (ICS)</a>
      </aside>
    </div>
  </main>
</Layout>
