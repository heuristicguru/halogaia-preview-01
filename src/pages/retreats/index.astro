---
import Layout from '../../templates/Layout.astro';
const base = import.meta.env.BASE_URL;
const retreats = [
  {slug:'re-wild-yourself', title:'Re‑Wild Yourself (Women’s Retreat)', dates:'Upcoming cycles', price:'See page', img:'https://www.halogaia.com/wp-content/uploads/2025/02/WOMENS-REWILDING-WEBBANNER.jpg'}
];
---
<Layout title="Retreats" description="Upcoming retreats in Ponta Malongane—dates, pricing, inclusions.">
  <main class="container section">
    <h1 class="h1">Retreats</h1>
    <ul class="mt-8 grid gap-6 md:grid-cols-2">
      {retreats.map(r => (
        <li class="card p-0 overflow-hidden">
          <img src={r.img} alt={r.title} class="w-full" />
          <div class="p-6">
            <h3 class="h3"><a class="no-underline" href={base + 'retreats/' + r.slug + '/'}>{r.title}</a></h3>
            <p class="mt-2">{r.dates} • {r.price}</p>
          </div>
        </li>
      ))}
    </ul>
  </main>
</Layout>
