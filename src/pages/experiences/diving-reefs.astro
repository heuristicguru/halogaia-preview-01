---
import Layout from '../../templates/Layout.astro';
const base = import.meta.env.BASE_URL;
const schema = {"@context": "https://schema.org", "@type": "FAQPage", "mainEntity": [{"@type": "Question", "name": "Certification", "acceptedAnswer": {"@type": "Answer", "text": "Local PADI centre offers courses and guided dives."}}, {"@type": "Question", "name": "Conditions", "acceptedAnswer": {"@type": "Answer", "text": "Typical viz 10–25 m; warm currents common."}}]};
---
<Layout title="Diving & Reefs — Mozambique" description="Warm-water reefs with rays, turtles and colourful hard corals." schema={schema}>
  <main class="container section">
    <h1 class="h1">Diving & Reefs</h1>
    <p class="lead mt-2">Warm-water reefs with rays, turtles and colourful hard corals.</p>
<h2 class='h3 mt-8'>Certification</h2><p class='mt-2'>Local PADI centre offers courses and guided dives.</p>
<h2 class='h3 mt-8'>Conditions</h2><p class='mt-2'>Typical viz 10–25 m; warm currents common.</p>

    <h2 class="h3 mt-8">Book</h2>
    <p class="mt-2">Check <a href={base + 'retreats/'}>retreats</a> or <a href={base + 'events/'}>events</a> for dates.</p>
  </main>
</Layout>
