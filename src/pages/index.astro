---
import Layout from '../templates/Layout.astro';
import Hero from '../components/Hero.astro';
import TrustStrip from '../components/TrustStrip.astro';
import CTA from '../components/CTA.astro';
const schema = {"@context":"https://schema.org","@type":"Organization","name":"Halo Gaia Adventure Travel","url":"https://example.com"};
const base = import.meta.env.BASE_URL;
---
<Layout title="Retreats & Wild Dolphin Encounters in Mozambique" description="Swim with wild dolphins, women’s rewilding retreats, and family holidays in Ponta Malongane." schema={schema}>
  <Hero title="Retreat to the wild soul of Mozambique" text="Swim with wild dolphins, rest by the ocean, and reconnect with nature in Ponta Malongane." />
  <TrustStrip />
  <section class="section">
    <div class="container grid gap-6 md:grid-cols-3">
      <a class="card p-6 no-underline" href={base + 'retreats/wild-woman/'}>
        <h3 class="h3">Re-Wild Yourself (Women’s Retreat)</h3>
        <p class="mt-2 text-gray-700">Circle, ocean practices, and dolphin encounters. Dates & pricing inside.</p>
      </a>
      <a class="card p-6 no-underline" href={base + 'experiences/swim-with-dolphins/'}>
        <h3 class="h3">Swim with Dolphins</h3>
        <p class="mt-2 text-gray-700">Respectful, permit-aligned ocean time with resident pods.</p>
      </a>
      <a class="card p-6 no-underline" href={base + 'accommodation/'}>
        <h3 class="h3">Accommodation</h3>
        <p class="mt-2 text-gray-700">From rustic huts to private homes. Curated stays close to launch.</p>
      </a>
    </div>
  </section>
  <CTA />
</Layout>
