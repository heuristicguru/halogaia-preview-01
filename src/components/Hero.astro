---
const base = import.meta.env.BASE_URL;
const href = (p) => base + (p?.replace(/^\//,'') || '');
const props = Astro.props;
const eyebrow = props.eyebrow ?? 'Retreats • Dolphins • Wild Coast';
const title = props.title;
const text = props.text;
const primaryText = props.primaryText ?? 'View upcoming retreats';
const primaryHref = props.primaryHref ?? 'retreats/';
const image = props.image ?? 'images/hero.svg';
---
<section class="section bg-sand">
  <div class="container grid gap-8 md:grid-cols-2 items-center">
    <div>
      <p class="uppercase tracking-wide text-ocean/80 text-sm">{eyebrow}</p>
      <h1 class="h1 mt-2">{title}</h1>
      <p class="lead mt-4">{text}</p>
      <div class="mt-6 flex gap-4">
        <a class="btn" href={href(primaryHref)}>{primaryText}</a>
        <a class="btn--alt" href={href('plan-your-trip')}>Plan your trip</a>
      </div>
    </div>
    <div class="order-first md:order-last">
      <img src={href(image)} alt="Wild dolphin encounter" class="w-full rounded-2xl shadow-md" loading="lazy" />
    </div>
  </div>
</section>
