---
const base = import.meta.env.BASE_URL;
const href = (p) => base + (p?.replace(/^\//,'') || '');
const props = Astro.props;
const title = props.title ?? 'Ready to re-wild?';
const text = props.text ?? 'Join an upcoming retreat or plan a family holiday in Mozambique.';
const hrefTo = props.hrefTo ?? 'contact';
const button = props.button ?? 'Enquire now';
---
<section class="section bg-seafoam/20">
  <div class="container text-center">
    <h2 class="h2">{title}</h2>
    <p class="lead mt-2">{text}</p>
    <a class="btn mt-6" href={href(hrefTo)}>{button}</a>
  </div>
</section>
